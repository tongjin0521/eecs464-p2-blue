import pylab


x = pylab.loadtxt('/home/your-grace/Birds/twist_test_TSV/2000twist_40spd_1_pos.tsv', delimiter=',',skiprows=12)

x.shape = (x.shape[0], x.shape[1]/3, 3)

mid_leg_x = pylab.np.array([x[...,1,0], x[...,6,0], x[...,7,0], x[...,15,0], x[...,15,0], x[...,16,0], x[...,17,0], x[...,23,0], x[...,29,0], x[...,30,0], x[...,31,0], x[...,32,0], x[...,38,0]])

x_axis = np.empty(mid_leg_x.shape[0])

for n in xrange(x_axis.shape[0]):
    x_axis[n] = mean(mid_leg_x[n,...])

